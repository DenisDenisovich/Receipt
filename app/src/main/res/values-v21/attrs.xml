<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SubtitleHeader">

        <attr name="margin_start_collapsed" format="dimension" />

        <attr name="title_margin_top_expanded" format="dimension" />
        <attr name="title_margin_top_collapsed" format="dimension" />
        <attr name="title_margin_start_expanded" format="dimension" />
        <attr name="title_text_size_expanded" format="dimension" />
        <attr name="title_text_size_collapsed" format="dimension" />

        <attr name="subtitle_margin_top_expanded" format="dimension" />
        <attr name="subtitle_margin_top_collapsed" format="dimension" />
        <attr name="subtitle_margin_start_expanded" format="dimension" />
        <attr name="subtitle_text_size_expanded" format="dimension" />
        <attr name="subtitle_text_size_collapsed" format="dimension" />

        <attr name="init_state" format="enum">
            <enum name="expanded" value="0" />
            <enum name="collapsed" value="1" />
        </attr>

        <attr name="typeface" format="string" />
        <attr name="title_typeface" format="string"/>
        <attr name="subtitle_typeface" format="string"/>

        <attr name="title_text" format="string"/>
        <attr name="subtitle_text" format="string"/>

        <attr name="color" format="color"/>
        <attr name="title_color" format="color"/>
        <attr name="subtitle_color" format="color"/>

    </declare-styleable>
</resources>